<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <report id="report_session" model="account.move" string="Carta porte" 
  name="cartaportegser.report_carta_porte" file="cartaportegser.report_session" report_type="qweb-pdf" />
  
  <template id="report_carta_porte">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.external_layout">
                <div class="container-fluid">
                  <div class="row">
                    <div class="col-12 border border-primary rounded p-5 text-center" style="background-color: #486f9e; color: white;">
                      Contenido del reporte de Odoo
                    </div>
                  </div>
                </div>
                <div class="page" style="max-width:100mm">
                  <div class="row texty-center">
                    <div class="col-12"><h6>Factura <span t-field="o.name"/></h6><br/></div>
                  </div>
                </div>
            </t>
        </t>
    </t>
  </template>
</odoo>






