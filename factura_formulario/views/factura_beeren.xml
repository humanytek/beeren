<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hide_account_field_invoice_lines" model="ir.ui.view">
        <field name="name">Hide Account Field in Invoice Lines</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/tree/field[@name='invoice_line_ids']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>