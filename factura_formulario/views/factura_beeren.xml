<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hide_account_field_invoice_lines" model="ir.ui.view">
        <field name="name">Hide Account Field in Invoice Lines</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="account_id" position="replace">
                <field name="account_id" invisible="1"/>
            </field>
            <field name="l10n_mx_edi_customs_number" position="replace">
                <field name="l10n_mx_edi_customs_number" invisible="1"/>
            </field>
            <field name="product_id" position="after">
                <field name="Asin"/>
            </field>
        </field>
    </record>
    <record id="hide_account_field_invoice_lines_1" model="ir.ui.view">
        <field name="name">Hide Account Field in Invoice Lines</field>
        <field name="model">l10n_mx_edi.invoice.form.inherit</field>
        <field name="inherit_id" ref="l10n_mx_edi_extended.view_l10n_mx_edi_invoice_form_inherit"/>
        <field name="arch" type="xml">
            <field name="l10n_mx_edi_customs_number" position="replace">
                <field name="l10n_mx_edi_customs_number" invisible="1"/>
            </field>
        </field>
    </record>
</odoo>
