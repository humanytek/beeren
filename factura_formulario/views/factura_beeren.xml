<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hide_account_field_invoice_lines" model="ir.ui.view">
        <field name="name">Hide Account Field in Invoice Lines</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="account_id" position="replace">
                <field name="account_id" invisible="1"/>
            </field>
            <field name="product_id" position="after">
                <field name="Asin"/>
            </field>

            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_subtotal']" position="after">
                <field name="l10n_mx_edi_customs_number" attrs="{'column_invisible': [('parent.move_type', 'not in', ('out_invoice', 'out_refund'))]}"/>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree" position="inside">
                <field name="l10n_mx_edi_customs_number" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
